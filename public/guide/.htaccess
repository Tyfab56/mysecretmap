# Rediriger toutes les requêtes vers /guide/ vers index.html

RewriteEngine On

# Si le fichier ou le dossier n'existe pas, redirige vers index.html

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^guide/ index.html [L]

# Si Laravel doit gérer d'autres routes, assurez-vous que tout ce qui n'est pas guide/ soit géré par Laravel

RewriteRule ^ - [L]

# Rediriger toutes les autres routes vers index.php (si Laravel gère une partie du site)

RewriteCond %{REQUEST_URI} !^/guide/
RewriteRule ^ index.php [L]
